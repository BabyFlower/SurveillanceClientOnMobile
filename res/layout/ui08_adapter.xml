<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/ui08_adapter_iv"
        android:layout_width="@dimen/video_width"
        android:layout_height="@dimen/video_height"
        android:background="@color/tab_checked"
        android:contentDescription="@string/description" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" >

        <TextView
            android:id="@+id/ui08_adapter_name"
            style="@style/small_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/dir"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ui08_adapter_remote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/description"
                android:src="@drawable/remote_bg" />

            <ImageView
                android:id="@+id/ui08_adapter_local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dip"
                android:contentDescription="@string/description"
                android:src="@drawable/local_gb" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>