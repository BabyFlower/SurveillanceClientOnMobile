<?xml version="1.0" encoding="utf-8"?>
<com.anviz.scom.view.ScrollerItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/ui09_adapter_time"
            style="@style/small_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/dir_transparent"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ui09_adapter_iv"
                android:layout_width="@dimen/video_width"
                android:layout_height="@dimen/video_height"
                android:background="@color/tab_checked"
                android:contentDescription="@string/description" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/ui09_adapter_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/ui09_adapter_alarm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ui09_adapter_ll"
        android:layout_width="120dip"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/ui09_adapter_del"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="@color/red_warn"
            android:gravity="center"
            android:text="@string/delete"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/ui09_adapter_keep"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="@color/main_title_gb"
            android:gravity="center"
            android:text="@string/keep"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/ui09_adapter_save_as"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="@color/tab_checked"
            android:gravity="center"
            android:text="@string/save_as"
            android:textColor="#ffffff" />
    </LinearLayout>

</com.anviz.scom.view.ScrollerItemView>